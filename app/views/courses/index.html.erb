<br />

<div class="registration_box col-10 offset-1">
  <h1 class="text-center"> Learn Something New Today </h1>
  <hr />
  <br />

  <% @courses.each do |course| %>
    <h4><%= link_to course.title, course_path(course) %> </h4>
    <br />
    <div class = "row">
      <div class = "col-sm-8 col-12">
        <p> <%= truncate(course.description, length: 180) %> <%=link_to "Read More", course_path(course) %> </p>
      </div>
      <div class = "col-sm-4 col-12 text-center">
        <%= link_to 'Read More', course_path(course), class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>