<br />

<div class="registration_box col-10 offset-1">
  <h1 class="text-center"> Learn Something New Today </h1>
  <hr />
  <br />

  <% @courses.each do |course| %>
  <div class = "index-box"
    <span><h5 class = "course-title"><%= link_to course.title, course_path(course) %> <%= link_to 'View Course', course_path(course), class: "btn btn-primary btn-sm float-right" %></h5></span>
    <br />
    <% if course.image.present? %>
      <div class = "row">        
        <div class = "col-sm-2 col 12">
          <%= image_tag course.image, class: 'index-course-image' %>
        </div>
        <div class = "col-sm-8 col-12">
          <p> <%= truncate(course.description, length: 400) %> <%=link_to "Read More", course_path(course) %> </p>
        </div>
      </div>

    <% else %>
      <div class = "row">
        <div class = "col-sm-10 col-12">
          <p> <%= truncate(course.description, length: 400) %> <%=link_to "Read More", course_path(course) %> </p>
        </div>
      </div>  
    <% end %> 
  </div>
    <br class="clr" />
  <% end %>
</div>