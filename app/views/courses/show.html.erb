<br />

<div class="registration_box col-10 offset-1">
  <h2 class="text-center"> <%= @course.title %> </h2>
  <br />
  <div class = "text-center"> 
    <%= image_tag @course.image, class: 'img-fluid' %>
  </div>
  <br />
  <div class = "row">
    <div class = "col-sm-4 col-12 text-center">
      <span class="badge badge-primary"> 
        <%= number_to_currency @course.cost %>
      </span>

      <% if current_user && current_user == @course.user %>
      <br />
      <br />
        <%= link_to "Administer Course", instructor_course_path(@course), class: "btn btn-success btn-lg" %>
        <br />
        <br />
      <% else %>
        <br />
        <br />
        <%= link_to "Enroll", course_enrollments_path(@course), class: "btn btn-success btn-lg" %>
        <br />
        <br />
      <% end %>    
    </div>

    <div class = "col-sm-8 col-12">
      <p> <%= @course.description %> </p>
    </div>
  </div>

  <div class = "col-12">
    <% @course.sections.each do |section| %>
      <div class = "section">
        <h4> 
          <%= section.title %> 
        </h4>
        <br />
        <div class = "row">
          <% section.lessons.each do |lesson| %>
            <div class="col-12 col-sm-6">
              <div class = "lesson text-center">
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %> </b>
                  <br />
                  <small><%= lesson.subtitle %></small>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class = "clr" />
      </div>
      <br />    
    <% end %>

  </div>
</div>