<br />

<div class="registration_box col-10 offset-1">
  <h2 class="text-center"> <%= @course.title %> </h2>
  <br />
  <div class = "text-center"> 
    <%= image_tag @course.image, class: 'img-fluid' %>
  </div>
  <br />
  <div class = "row">
    <div class = "col-sm-4 col-12 text-center">
      <span class="badge badge-primary"> 
        <%= number_to_currency @course.cost %>
      </span>

      <% if current_user && current_user == @course.user %>
      <br />
      <br />
        <%= link_to "Administer", instructor_course_path(@course), class: "btn btn-success btn-lg" %>
        <br />
        <br />
      <% end %>
        <br />
        <br />

      <% if current_user %>
        <% if current_user.enrolled_in?(@course) %>       
          <h3 class = "badge badge-primary"> You Are Enrolled! </h3>
          <br />
          <br />
        <% else %> 
          <% if @course.free? %>
            <%= link_to "Enroll for Free!", course_enrollments_path(@course), class: "btn btn-success btn-lg", method: :post %>
            <br />
            <br />
          <% else %>
            <%= form_tag course_enrollments_path(@course) do %>

              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-email="<%=current_user.email %>"
                      data-description="<%= @course.title %>"
                      data-amount="<%=(@course.cost * 100).to_i %>"
                      data-locale="auto"></script>
            <% end %> 
          <% end %> 
        <% end %>
      <% else %>
        <h3> <%= link_to "Sign Up to Enroll!", new_user_registration_path, class: 'btn btn-primary' %> </h3>  
        <br />
        <br />
      <% end %>    
    </div>

    <div class = "col-sm-8 col-12">
      <p> <%= @course.description %> </p>
    </div>
  </div>

  <div class = "col-12">
    <% @course.sections.each do |section| %>
      <div class = "section">
        <h4> 
          <%= section.title %> 
        </h4>
        <br />
        <div class = "row">
          <% section.lessons.each do |lesson| %>
            <div class="col-12 col-sm-6">
              <div class = "lesson text-center">
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %> </b>
                  <br />
                  <small><%= lesson.subtitle %></small>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class = "clr" />
      </div>
      <br />    
    <% end %>

  </div>
</div>