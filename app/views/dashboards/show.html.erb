<br />
<div class = "registration_box col-10 offset-1">
  <h1> My Dashboard </h1>
  <hr />
  <br />
  <h3><span class="fa fa-graduation-cap" aria-hidden="true"></span><i> What I'm Learning...</i> </h3>
  <br />

  <% current_user.enrolled_courses.each do |course| %>
    <div class = "index-box">
      <div class= "row">
        <div class= "col-sm-10 col 12">
          <h5 class="course-title"><%= course.title%></h5>
        </div>
        <div class = "col-sm-2 col-12">
          <%=link_to "Go To Course", course_path(course), class: "btn btn-primary btn-sm float-right"%>
        </div>
        <br />
        <br/>
      </div>
      <% if course.image.present? %>
        <div class = "row">        
          <div class = "col-sm-2 col 12">
            <%= image_tag course.image, class: 'index-course-image' %>
          </div>
          <div class = "col-sm-8 col-12">
            <p> <%= truncate(course.description, length: 300) %> <%=link_to "Read More", course_path(course) %> </p>
          </div>
        </div>
      <% else %>
        <div class = "row">
          <div class = "col-sm-10 col-12">
            <p> <%= truncate(course.description, length: 300) %> <%=link_to "Read More", course_path(course) %> </p>
          </div>
        </div>  
      <% end %>
    </div> 
    <% end %>
    <br />
    <h3><span class="fa fa-graduation-cap" aria-hidden="true"></span><i> What I'm Teaching...</i> </h3>

  <% current_user.courses.each do |course| %>
    <div class = "index-box">
      <div class= "row">
        <div class= "col-sm-10 col 12">
          <h5 class="course-title"><%= course.title%></h5>
        </div>
        <div class = "col-sm-2 col-12">
          <%=link_to "Administer", instructor_course_path(course), class: "btn btn-primary btn-sm float-right"%>
        </div>
        <br />
        <br/>
      </div>
      <% if course.image.present? %>
        <div class = "row">        
          <div class = "col-sm-2 col 12">
            <%= image_tag course.image, class: 'index-course-image' %>
          </div>
          <div class = "col-sm-8 col-12">
            <p> <%= truncate(course.description, length: 300) %> <%=link_to "Read More", instructor_course_path(course) %> </p>
          </div>
        </div>
      <% else %>
        <div class = "row">
          <div class = "col-sm-10 col-12">
            <p> <%= truncate(course.description, length: 300) %> <%=link_to "Read More", instructor_course_path(course) %> </p>
          </div>
        </div>  
      <% end %>
    </div> 
    <% end %>
    <br />
  <br />
</div>

