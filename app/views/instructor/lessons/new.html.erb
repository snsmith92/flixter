<div class="registration_box col-10 offset-1">
  <h2 class="text-center"> Add A New Lesson </h2>

  <%= simple_form_for @lesson, url: instructor_section_lessons_path(current_section) do |f| %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :video %>
    <%= f.submit "Add the Lesson", class: 'btn btn-primary' %>
    <br />
  <% end %>
</div>